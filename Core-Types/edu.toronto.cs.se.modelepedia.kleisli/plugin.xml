<plugin>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated kleisli -->
      <package
            uri="http://se.cs.toronto.edu/modelepedia/KleisliModelRel"
            class="edu.toronto.cs.se.modelepedia.kleisli.KleisliPackage"
            genModel="model/kleisli.genmodel"/>
   </extension>

   <extension
         point="edu.toronto.cs.se.mmtf.relationships">
      <relationshipType>
         <modelType
               factoryClass="edu.toronto.cs.se.modelepedia.kleisli.library.KleisliMultiModelHeavyTypeFactory"
               isAbstract="true">
            <type
                  name="KleisliModelRel"
                  uri="http://se.cs.toronto.edu/modelepedia/KleisliModelRel">
            </type>
            <constraint
                  implementation="edu.toronto.cs.se.modelepedia.kleisli.constraint.KleisliModelRelTypeConstraint"
                  language="JAVA">
            </constraint>
         </modelType>
         <modelTypeEndpoint>
            <type
                  name="KleisliModelEndpoint"
                  uri="http://se.cs.toronto.edu/modelepedia/KleisliModelRel-Model/KleisliModelEndpoint">
            </type>
            <typeEndpoint
                  lowerBound="0"
                  upperBound="-1"
                  targetTypeUri="http://se.cs.toronto.edu/mmtf/Model">
            </typeEndpoint>
            <modelElemType
                  classLiteral="ModelElementWildcard">
                <type
                     name="KleisliModelElem"
                     uri="http://se.cs.toronto.edu/mmtf/Model/KleisliModelElem">
                </type>
            </modelElemType>
         </modelTypeEndpoint>
<!--
         <modelTypeEndpoint>
            <type
                  name="ModelEndpoint"
                  uri="http://se.cs.toronto.edu/modelepedia/KleisliModelRel-Model/ModelEndpoint">
            </type>
            <typeEndpoint
                  lowerBound="0"
                  upperBound="-1"
                  targetTypeUri="http://se.cs.toronto.edu/mmtf/Model">
            </typeEndpoint>
            <modelElemType
                  classLiteral="ModelElementWildcard">
                <type
                     name="ModelElem"
                     uri="http://se.cs.toronto.edu/mmtf/Model/ModelElem">
                </type>
            </modelElemType>
         </modelTypeEndpoint>
-->
         <linkType>
            <type
                  name="KleisliLink"
                  uri="http://se.cs.toronto.edu/mmtf/KleisliModelRel/KleisliLink">
            </type>
            <modelElemTypeEndpoint>
               <type
                     name="KleisliModelElemEndpoint"
                     uri="http://se.cs.toronto.edu/mmtf/KleisliModelRel/KleisliLink-KleisliModelElem/KleisliModelElemEndpoint">
               </type>
               <typeEndpoint
                     lowerBound="0"
                     upperBound="-1"
                     targetTypeUri="http://se.cs.toronto.edu/mmtf/Model/KleisliModelElem">
               </typeEndpoint>
            </modelElemTypeEndpoint>
<!--
            <modelElemTypeEndpoint>
               <type
                     name="ModelElemEndpoint"
                     uri="http://se.cs.toronto.edu/mmtf/KleisliModelRel/KleisliLink-ModelElem/ModelElemEndpoint">
               </type>
               <typeEndpoint
                     lowerBound="0"
                     upperBound="-1"
                     targetTypeUri="http://se.cs.toronto.edu/mmtf/Model/ModelElem">
               </typeEndpoint>
            </modelElemTypeEndpoint>
-->
         </linkType>
      </relationshipType>
   </extension>

   <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="popup:org.eclipse.gmf.runtime.diagram.ui.DiagramEditorContextMenu">
         <dynamic
               class="edu.toronto.cs.se.modelepedia.kleisli.contextmenu.KleisliRelationshipDiagramActions"
               id="edu.toronto.cs.se.modelepedia.kleisli.contextmenu.KleisliRelationshipDiagramActions">
            <visibleWhen>
               <with variable="activePartId">
                  <equals value="edu.toronto.cs.se.mmtf.mid.relationship.diagram.part.RelationshipDiagramEditorID"/>
               </with>
            </visibleWhen>
         </dynamic>
      </menuContribution>
   </extension>

</plugin>
