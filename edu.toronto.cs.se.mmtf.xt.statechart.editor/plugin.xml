<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="edu.toronto.cs.se.mmtf.xt.statechart.presentation.StatechartModelWizardID"
            name="%_UI_StatechartModelWizard_label"
            class="edu.toronto.cs.se.mmtf.xt.statechart.presentation.StatechartModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/StatechartModelFile.gif">
         <description>%_UI_StatechartModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="edu.toronto.cs.se.mmtf.xt.statechart.presentation.StatechartEditorID"
            name="%_UI_StatechartEditor_label"
            icon="icons/full/obj16/StatechartModelFile.gif"
            extensions="statechart"
            class="edu.toronto.cs.se.mmtf.xt.statechart.presentation.StatechartEditor"
            contributorClass="edu.toronto.cs.se.mmtf.xt.statechart.presentation.StatechartActionBarContributor">
      </editor>
   </extension>

   <extension
         point="edu.toronto.cs.se.mmtf.editors">
      <editor
            metamodelUri="http:///edu/toronto/cs/se/mmtf/xt/statechart/model/statechart.ecore"
            isDiagram="false"
            editorId="edu.toronto.cs.se.mmtf.xt.statechart.presentation.StatechartEditorID"
            wizardId="edu.toronto.cs.se.mmtf.xt.statechart.presentation.StatechartModelWizardID">
      </editor>
   </extension>

</plugin>
